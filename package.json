{
  "name": "homebridge-pc-volume",
  "version": "1.1.0",
  "description": "Control your system's volume using Apple's HomeKit",
  "author": "Joseph Duffy",
  "license": "MIT",
  "main": "build/index.js",
  "preferGlobal": true,
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "build:watch": "nodemon -e ts,json --watch src --watch tsconfig.json --watch package.json --exec \"tsc && homebridge --debug\"",
    "test": "tsc --noEmit && npm run lint && npm run format",
    "lint": "tslint --fix --project ./tsconfig.json",
    "lint:check": "tslint --project ./tsconfig.json",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier-check 'src/**/*.ts'",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/node": "^10.12.12",
    "loudness": "^0.3.0"
  },
  "devDependencies": {
    "hap-nodejs": "^0.4.47",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.8",
    "prettier": "^1.15.3",
    "prettier-check": "^2.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": ">=4.4.1",
    "homebridge": ">=0.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JosephDuffy/homebridge-pc-volume.git"
  },
  "keywords": [
    "homebridge-plugin",
    "volume",
    "mac",
    "linux"
  ],
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
